<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Split.Views.DetailViews.GroupPage"
             Title="Mes groupes">
    <ListView x:Name="GroupListView">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ImageCell ImageSource="icon_group.png"
                           Text="{Binding Name}" TextColor="Black"
                           Detail="{Binding NamesString}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>