<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Split.Views.LoginPage">
    <StackLayout x:Name="MasterLayout">

        <StackLayout x:Name="LogoLayout" VerticalOptions="FillAndExpand">
            <Image x:Name="LoginIcon" Source="logo.png" Margin="0,80,0,0"/>
        </StackLayout>

        <StackLayout x:Name="LoginLayout" VerticalOptions="StartAndExpand">
            <StackLayout.Padding>
                <OnIdiom x:TypeArguments="Thickness" Phone="40,0,40,0" Tablet="140,150,140,0"/>
            </StackLayout.Padding>

            <ActivityIndicator x:Name="ActivitySpinner" Color="Red" IsRunning="true"/>

            <Entry x:Name="Entry_Username" Placeholder="Identifiant" />
            <Entry x:Name="Entry_Password" Placeholder="Mot de passe" />
            <Button x:Name="Btn_Signin" Text="Se connecter" Clicked="SingInProcedure" />

        </StackLayout>

    </StackLayout>
</ContentPage>